<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/background_light"
    android:paddingTop="120dp"
    android:paddingLeft="50dp"
    android:paddingRight="60dp"
    android:paddingEnd="20dp"
    android:paddingBottom="120dp">


    <Button
        android:id="@+id/button_mapa"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:background="@drawable/mapaicono"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp" />

    <Button
        android:layout_height="150dp"
        android:id="@+id/button_horario"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_notificacion"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/button_notificacion"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:layout_height="150dp"
        android:id="@+id/button_notificacion"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:background="@drawable/notificacionicono"
        android:layout_below="@+id/button_mapa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_height="150dp"
        android:id="@+id/button_ayuda"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:background="@drawable/ayudaicono"
        android:paddingTop="12dp"
        android:layout_alignTop="@+id/button_notificacion"
        android:layout_alignLeft="@+id/button_horario"
        android:layout_alignStart="@+id/button_horario"
        android:layout_alignRight="@+id/button_horario"
        android:layout_alignEnd="@+id/button_horario" />

</RelativeLayout>