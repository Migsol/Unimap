<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">

    <TextView
        android:text="Detalles del Mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TexView_detalle_mensaje"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_mensaje"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="20dp"
        android:text="Buenos Días,no podré asistir el día de hoy a la clase de Matemática."
        android:layout_margin="10dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="120dp" />

    <Button
        android:text="ACEPTAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_aceptar_mensaje"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
         />

</LinearLayout>