<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    tools:context="com.example.hp.unimap.NuevoMensaje">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText_descripcion"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:minLines="1"
        android:maxLines="4"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/background_dark"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:text="ENVIAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_enviar_mensaje"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editText_descripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:text="Motivo de Ausencia "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_motivo"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:padding="20dp"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText_descripcion"
        android:layout_alignEnd="@+id/editText_descripcion"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="20dp"
        android:layout_width="230dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_materia"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:paddingRight="10dp"
        android:hint="Materia"
        android:layout_below="@+id/textView_motivo"
        android:layout_toLeftOf="@+id/spinner1"
        android:layout_toStartOf="@+id/spinner1" />

</RelativeLayout>

